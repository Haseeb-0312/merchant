@{
    ViewBag.Title = "ViewAllOrders";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

@model List<The_Merchant.Models.User>
<div class="container">
<table class="table table-striped table-bordered">
    <thead style="color:azure">
        <tr>
            <td>
                Cart Id
            </td>
            <td>Item Id</td>
            <td>
                User Name
            </td>
            <td>
                Email
            </td>
            <td>
                Address
            </td>

            
            <td>
                Quantity
            </td>
            <td>
                Sub Total
            </td>
            <td>Status</td>
            <td>Delivery Report</td>
        </tr>

    </thead>
    <tbody>
        @foreach (var User in Model)
        {
            foreach (var i in User.Carts)
            {

                foreach (var line in i.LineItems)
                {
                    <tr class="success">
                        <td>@line.CartId</td>
                        <td>@line.ItemId</td>

                        <td> @User.FName @User.LName</td>

                        <td> @User.Email</td>

                        <td> @User.Address</td>

                        <td>@line.Quantity</td>
                        <td>@line.SubTotal</td>
                        <td>@i.Status</td>
                        <td><a class="btn btn-primary" href="/Admin/ChangeStatus?id=@line.CartId">Mark As Delivered</a></td>
                    </tr>

                }

            }
        }
    </tbody>
        </table>


      
            
</div>


