@model The_Merchant.Models.Item
<div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-3">
        <div class="panel panel-primary" id="updateItemPanel">
            <div class="panel-heading">
                <div class="panel-title">
                    Update
                </div>

            </div>
            <div class="panel-body">




                <form action="/Admin/UpdatedItem" method="post">
                       <input type="hidden" class="form-control" name="ItemId" value="@Model.ItemId"  />
                    <div class="row" align="center">

                        <div class="col-lg-12">
                            <label>Item Name:</label>
                            <input type="text" class="form-control" name="ItemName" value="@Model.ItemName" />
                        </div>
                    </div>   
                      <div class="row" align="center">

                        <div class="col-lg-12">
                            <label>Description:</label>
                            <input type="text" class="form-control" name="Description" value=" @Model.Description" />
                        </div>
                    </div>
                    <div class="row" align="center">
                        <div class="col-lg-12">
                            <label>Price:</label>
                            <input type="text" class="form-control" name="Price" value=" @Model.Price" required />
                        </div>
                    </div>
                    <div class="row" align="center">
                        <div class="col-lg-12">
                            <label>Quantity:</label>
                            <input type="text" class="form-control" name="Quantity" value=" @Model.Quantity" required />
                        </div>
                    </div>

                    <input type="submit"class="btn btn-primary"  value="Update On Click" />
                </form>
            </div>          

            </div>

        </div>
    </div>



