@model The_Merchant.Models.User
<div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-3">
        <div class="panel panel-primary" id="updateItemPanel">
            <div class="panel-heading">
                <div class="panel-title">
                    Update
                </div>

            </div>
            <div class="panel-body">




                <form action="/Admin/UpdatedUser" method="post">
                    <input type="hidden" class="form-control" name="UId" value="@Model.UId" />
                    <div class="row" align="center">

                        <div class="col-lg-12">
                            <label>First Name:</label>
                            <input type="text" class="form-control" name="FName" value="@Model.FName" />
                        </div>
                    </div>
                    <div class="row" align="center">

                        <div class="col-lg-12">
                            <label>Last Name:</label>
                            <input type="text" class="form-control" name="LName" value="@Model.LName " />
                        </div>
                    </div>
                    <div class="row" align="center">
                        <div class="col-lg-12">
                            <label>Address:</label>
                            <input type="text" class="form-control" name="Address" value=" @Model.Address" required />
                        </div>
                    </div>
                    <div class="row" align="center">
                        <div class="col-lg-12">
                            <label>Email:</label>
                            <input type="text" class="form-control" name="Email" value="@Model.Email " required />
                        </div>
                    </div>
                    <div class="row" align="center">
                        <div class="col-lg-12">
                            <label>Type:</label>
                            <input type="text" class="form-control" name="Type" value="@Model.Type" required />
                        </div>
                    </div>

                    <input type="submit" class="btn btn-primary" value="Update On Click" />
                </form>
            </div>

        </div>

    </div>
</div>



