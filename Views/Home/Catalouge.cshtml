@{
    ViewBag.Title = "Catalouge";
}
@model List<The_Merchant.Models.Item>

<style>
    div.img {
        margin: 5px;
        border: 1px solid #000000;
        height: 250px;
        width: 250px;
        float: left;
        text-align: center;
    }
</style>


<div class="container">
    <div class="row">
        <div class="col-lg-12">
           
            <ol class="breadcrumb">
                <li>
                    <a href="#">Home</a>
                </li>
                <li class="active">Item Catalouge</li>
            </ol>
        </div>
    </div>
  
   
       @foreach (var i in Model)
{
    <div class="row">
        <div class="col-md-7">
            <a href="#" class="thumbnail">

                <img src="~/Content/images/@i.Path" width="200" height="200" />
            </a>
            </div>
        <div class="col-md-5">
            <h2> @i.ItemName</h2>
            
            <h4>Price:@i.Price </h4><a class="btn btn-primary" href="/Home/Cart?id=@i.ItemId">Add Item</a>
        </div>
    </div>
}
        
    
   
</div>

