@{
    ViewBag.Title = "AddItem";
    Layout = "~/Views/Shared/Dealer_Nav.cshtml";
}
@model The_Merchant.Models.Item
         
<div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-7">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="panel-title">
                    Add Items
                </div>

            </div>
            <div class="panel-body">
                @using(Html.BeginForm("Save","Dealer",FormMethod.Post,new{enctype="multipart/form-data"}))
                {
                    <div class="row" align="center">
                        <div class="col-lg-3" align="right">
                            <h5> @Html.LabelFor(m => m.ItemName): </h5>
                        </div>
                         <div class="col-lg-3">
                            @Html.TextBoxFor(m => m.ItemName, new { @class = "form-control", @placeholder="Enter Item's Name" ,@required="true" })
                        </div>
                    </div>
                    <br />


                    <div class="row" align="center">
                        <div class="col-lg-3" align="right">
                            <h5> @Html.LabelFor(m => m.Description): </h5>
                        </div>
                         <div class="col-lg-3">
                            @Html.TextBoxFor(m => m.Description, new { @class = "form-control", @placeholder="Enter Description" ,@required="true" })
                        </div>
                    </div>
                    <br />
                    
                     <div class="row" align="center">
                        <div class="col-lg-3" align="right">
                            <h5> @Html.LabelFor(m => m.Brand): </h5>
                        </div>
                         <div class="col-lg-3">
                            @Html.TextBoxFor(m => m.Brand, new { @class = "form-control", @placeholder="Enter Description" ,@required="true" })
                        </div>
                    </div>
                    <br />
                    
                    <div class="row">
                        <div class="row" align="center">
                            <div class="col-lg-3" align="right">
                                <h5> @Html.LabelFor(m => m.Price): </h5>
                            </div>
                            <div class="col-lg-3">
                                @Html.TextBoxFor(m => m.Price, new { @class = "form-control", @placeholder = "Enter Item's Price",@type="number", @required="true" })
                            </div>
                        </div>

                    </div>
                    <br />
                    <div class="row" align="center">
                        <div class="col-lg-3" align="right">
                            <h5> @Html.LabelFor(m => m.Quantity): </h5>
                        </div>
                         <div class="col-lg-3">
                            @Html.TextBoxFor(m => m.Quantity, new { @class = "form-control",@id="quantity", @placeholder="Enter Quantity" , @type="number", @required="true"})
                             <p id="result"></p>
                        </div>
                    </div>
                    <br />

                    <div class="row">
                        <div class="col-lg-3"></div>
                        <div class="col-lg-3">
                            <input id="input-2" type="file" name="Path" class="file" required/>
                            <input id="input-2" type="file" name="img1" class="file" required />
                            <input id="input-2" type="file" name="img2" class="file" required />
                            <input id="input-2" type="file" name="img3" class="file" required />
                            <input id="input-2" type="file" name="img4" class="file" required />

                        </div>
                       
                    </div><br />
                    <div class="row">
                        <div class="col-lg-2"></div>
                        <div class="col-lg-2">
                            <input type="submit" id="b1" class="btn btn-success bg-info" value="Add Item" />
                        </div>
                    </div>
                }
              

                </div>

            </div>
        </div>

    </div>
