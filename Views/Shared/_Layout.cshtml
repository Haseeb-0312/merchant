<!DOCTYPE html>
<html>
<head>
    @using The_Merchant.Controllers
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap/css/bootstrap.css"/>
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap/css/bootstrap.min.css"/>
    <link href="~/Content/jquery-ui.css" rel="stylesheet" />

    <script type="text/javascript" src="~/Content/jquery/jquery-2.1.4.min.js"></script>
    <script src="~/Content/jquery-ui.js"></script>
    <script type="text/javascript" src="~/Content/bootstrap/js/bootstrap.min.js"></script>
    
    
    
    <style>
        hr {
            display: block;
            height: 2px;
            border: 0;
            border-top: 1px solid #ccc;
            margin: 1em 0;
            padding: 0;
            border-color: blue;
        }
        .navbar-brand {
            margin-left: 70px !important;
        }
    </style>
</head>
<body class="cover">
    <nav class="navbar navbar-default" role="navigation">
        <div class="navbar-header">
               <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
           
            <a class="navbar-brand" style="font-family:'Tangerine', serif 'Tempus Sans ITC'">The Merchant</a>

        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
                <li style="font-family:'Tangerine', serif 'Tempus Sans ITC'">
                    <a href="/Home/Index/" style="margin:auto" >Home <span class="glyphicon glyphicon-home"></span></a>
                </li>

                <li style="font-family:'Tangerine', serif 'Tempus Sans ITC'">
                    <a href="/Home/ViewOrderItems" style="margin:auto">Order Items <span class="glyphicon glyphicon-shopping-cart"></span></a>
                </li>
@if (@Session["CustomerName"] != null)
{
                <li style="font-family:'Tangerine', serif 'Tempus Sans ITC'">
                    <a href="/Home/ViewPreviousOrders" style="margin:auto">Previous Orders<span class="glyphicon glyphicon-shopping-cart"></span></a>
                </li>
}
                <li style="font-family:'Tangerine', serif 'Tempus Sans ITC'">
                    <a href="/Home/Contact/" style="margin:auto">Contact <span class="glyphicon glyphicon-th-list"></span></a>
                </li>

                <li style="font-family:'Tangerine', serif 'Tempus Sans ITC'">
                    <a href="/Home/ViewCartItems" style="margin:auto">Cart Items <span class="glyphicon glyphicon-shopping-cart"></span></a>
                </li>
               
                @if (@Session["CustomerName"] == null)
{
    <li style="font-family:'Tangerine', serif 'Tempus Sans ITC'">

        <a data-toggle="modal" data-target="#responsive" style="margin:auto"><span class="glyphicon glyphicon-hand-right"></span> Sign in</a>

    </li>
}
                @if (@Session["CustomerName"] != null)
{

    <li class="dropdown" style="font-family:'Tangerine', serif 'Tempus Sans ITC'">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Welcome,@Session["CustomerName"] <b class="caret"></b></a>
        <ul class="dropdown-menu">
            <li>
                <a href="/Home/SignOut">Sign Out</a>
            </li>

        </ul>
    </li>
}
            </ul>

        </div>

    </nav>
    <div id="responsive" class="modal fade" tabindex="-1" data-width="760" aria-hidden="true" role="dialog">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
                    
                </div>
                <h1 class="dropdown" style="font-family:'Tangerine', serif 'Tempus Sans ITC'">Login</h1>
                <div class="modal-body">
                    <form method="post" action="/Home/CheckLogin">
                        <input type="email" class="form-control" placeholder="Enter Email Id" name="Email" required/>
                        <br />
                        <input type="password" class="form-control" placeholder="Enter Password" name="Password" required />
                        <br />
                        <br />
                        <div class="form-group">
                            <input type="submit" class="btn btn-success btn-block" id="logbtn" value="Login" />
                        </div>
                    </form>
                   
                    <div class="form-group" >
                            
                        <h3 style="font-family:'Tangerine', serif 'Tempus Sans ITC'">New User Can Sign Up</h3>
                            <a class="btn btn-primary form-control"  id="signupbtn" href="/Home/SignUp" >Sign Up </a>
                                                          
                    </div>
                </div>
            </div>
        </div>
    </div>


    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
